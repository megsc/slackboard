
<li>
  <div class="row">
    <div class="<%= @users.ids == message.user_id ? 'message-sent' : 'message-received' %>">
      <%= message.body %>
    </div>
  </div>
</li>

<% content_for :message do %>
  <span class = "bold"><%= gravatar_for message.user %><%= message.user.name %></span> <span><%= message.timestamp %></span><br>
  <%= message.body %><br>
<% end %>
	

